def combine_anagrams(words)
    
    print anagrams = words.group_by { |word| word.downcase.split(//).sort }.values
    
   
end

words = ['Cars', 'for', 'potatoes', 'racs', 'four','scar', 'creams','scream']

combine_anagrams(words) 


     
